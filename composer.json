{
  "require": {
    "php": ">= 7.0.0",
    "yiisoft/yii2": "2.0.12",
    "creocoder/yii2-taggable": "2.0.0",
    "jamband/ripple": "0.4.5",
    "hashids/hashids": "2.0.3"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "2.0.11",
    "yiisoft/yii2-gii": "2.0.5",
    "vlucas/phpdotenv": "2.4.0",
    "codeception/codeception": "2.3.5"
  },
  "provide": {
    "bower-asset/jquery": "*",
    "bower-asset/jquery.inputmask": "*",
    "bower-asset/bootstrap": "*",
    "bower-asset/punycode": "*",
    "bower-asset/yii2-pjax": "*",
    "bower-asset/typeahead.js": "*"
  },
  "autoload": {
    "files": ["helpers/functions.php"]
  },
  "scripts": {
    "dev": "composer ins -q && npm i -s && npm run dev",
    "clean": "rm -rf node_modules runtime/* tests/_output/* vendor web/assets/*",
    "show-asset-version": "composer show -t | grep -o 'bower-asset.*' | sort | uniq"
  }
}
