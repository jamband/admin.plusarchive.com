{
  "require": {
    "php": ">=7.2.0",
    "ext-json": "*",
    "creocoder/yii2-taggable": "2.0.0",
    "jamband/ripple": "0.8.0",
    "hashids/hashids": "4.0.0",
    "yiisoft/yii2": "2.0.37"
  },
  "require-dev": {
    "vlucas/phpdotenv": "5.1.0",
    "yiisoft/yii2-debug": "2.1.13",
    "codeception/module-yii2": "1.1.1",
    "codeception/module-webdriver": "1.1.1"
  },
  "provide": {
    "bower-asset/jquery": "*",
    "bower-asset/inputmask": "*",
    "bower-asset/punycode": "*",
    "bower-asset/yii2-pjax": "*"
  },
  "autoload": {
    "files": ["helpers/functions.php"]
  },
  "scripts": {
    "dev": "composer install --quiet && yarn && yarn dev",
    "clean": "rm -rf node_modules runtime/* tests/_output/* vendor web/assets/*",
    "show-asset-version": "composer show --tree | grep -o 'bower-asset.*' | sort | uniq"
  }
}
